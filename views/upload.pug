extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="videoFile") Video File
            input(type="file", name="videoFile", placeholder="Video File", required=true)
            input(type="text", name="title", placeholder="Title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit", value="Upload")
