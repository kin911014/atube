mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPlayer__column
                span
                    <i class="fas fa-volume-up"></i>
                span
                    |00:00 / 10:00
            .videoPlayer__column
                span#jsPlayButton
                    <i class="fas fa-play"></i>

            .videoPlayer__column
                span
                    <i class="fas fa-expand"></i>
            