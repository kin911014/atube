mixin videoPlayer(video={})
    .videoPlayer
        video(src=`/${video.src}`, autoplay)
        .videoPlayer__controls
            .videoPlayer__column
                span
                    <i class="fas fa-volume-up"></i>
                span
                    |00:00 / 10:00
            .videoPlayer__column
                    <i class="fas fa-play"></i>

            .videoPlayer__column
                    <i class="fas fa-expand"></i>
            